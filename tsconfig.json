{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "allowJs": false,
    "noStrictGenericChecks": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "shared/*": ["projects/shared/*"],
      "utils/*": ["projects/utils/*"],
      "core/*": ["projects/core/*"],
      "pixi.js": ["node_modules/pixi.js/dist/pixi.js"]
    }
  }
}
